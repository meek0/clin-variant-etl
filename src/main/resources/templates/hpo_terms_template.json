{
  "index_patterns": [
    "clin_qa_blue_hpo*",
    "clin_qa_green_hpo*",
    "clin_staging_hpo*",
    "clin_prod_hpo*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 2,
      "analysis" : {
        "tokenizer" : {
          "autocompleteTokenizer": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 20,
            "token_chars": [
              "letter",
              "digit",
              "punctuation"
            ]
          },
          "autocompleteIdTokenizer": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 2,
            "custom_token_chars": [":"],
            "token_chars": [
              "letter",
              "digit",
              "custom"
            ]
          }
        },
        "filter": {
          "hpo_ascii_folding" : {
            "type" : "asciifolding",
            "preserve_original" : "true"
          }
        },
        "analyzer" : {
          "autocomplete" : {
            "tokenizer" : "autocompleteTokenizer",
            "filter" : [
              "lowercase",
              "hpo_ascii_folding"
            ]
          },
          "autocompleteId" : {
            "tokenizer": "autocompleteIdTokenizer",
            "filter": [
              "lowercase"
            ]
          }
        }
      }
    },
    "mappings": {
      "properties" : {
        "compact_ancestors" : {
          "properties" : {
            "hpo_id" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword",
                  "ignore_above" : 256
                }
              }
            },
            "name" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword",
                  "ignore_above" : 256
                }
              }
            }
          }
        },
        "hpo_id" : {
          "type" : "text",
          "fields" : {
            "keyword" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "autocomplete" : {
              "type" : "text",
              "analyzer" : "autocompleteId"
            }
          }
        },
        "is_leaf" : {
          "type" : "boolean"
        },
        "name" : {
          "type" : "search_as_you_type",
          "index_options": "offsets",
          "doc_values" : false,
          "analyzer" : "autocomplete"
        },
        "parents" : {
          "type" : "keyword"
        }
      }
    }
  }
}
