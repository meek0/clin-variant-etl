{
  "index_patterns": [
    "clin_qa_blue_hpo*",
    "clin_qa_green_hpo*",
    "clin_staging_hpo*",
    "clin_prod_hpo*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 2,
      "analysis" : {
        "tokenizer" : {
          "autocompleteTokenizer": {
            "type": "edge_ngram",
            "min_gram": 3,
            "max_gram": 20,
            "token_chars": [
              "letter",
              "digit",
              "punctuation"
            ]
          },
          "autocompleteSearchTokenizer": {
            "type": "lowercase",
            "max_token_length": 20
          }
        },
        "filters": {
          "hpo_ascii_folding" : {
            "type" : "asciifolding",
            "preserve_original" : "true"
          }
        },
        "analyzer" : {
          "autocomplete" : {
            "filter" : [
              "lowercase",
              "hpo_ascii_folding"
            ],
            "type" : "custom",
            "tokenizer" : "autocompleteTokenizer"
          },
          "autocomplete_search": {
            "tokenizer": "autocompleteSearchTokenizer"
          }
        }
      }
    },
    "mappings": {
      "properties" : {
        "compact_ancestors" : {
          "properties" : {
            "hpo_id" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword",
                  "ignore_above" : 256
                }
              }
            },
            "name" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword",
                  "ignore_above" : 256
                }
              }
            }
          }
        },
        "hpo_id" : {
          "type" : "text",
          "fields" : {
            "keyword" : {
              "type" : "keyword",
              "ignore_above" : 256
            }
          }
        },
        "is_leaf" : {
          "type" : "boolean"
        },
        "name" : {
          "type" : "search_as_you_type",
          "doc_values" : false,
          "analyzer" : "autocomplete",
          "search_analyzer": "autocomplete_search"
        },
        "parents" : {
          "type" : "keyword"
        }
      }
    }
  }
}
